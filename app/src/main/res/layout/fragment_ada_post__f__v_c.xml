<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbackgroundjk">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/adaPostProfilesView"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/ada_post_view_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.184" />

        <View
            android:id="@+id/adaPostTitleView"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/text_input_layout_background"
            app:layout_constraintBottom_toTopOf="@+id/adaPostProfilesView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.675" />

        <TextView
            android:id="@+id/fragmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ada Post"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/adaPostTitleView"
            app:layout_constraintEnd_toEndOf="@+id/adaPostTitleView"
            app:layout_constraintStart_toStartOf="@+id/adaPostTitleView"
            app:layout_constraintTop_toTopOf="@+id/adaPostTitleView" />

        <Button
            android:id="@+id/sendPostGo"
            android:layout_width="57dp"
            android:layout_height="46dp"
            android:backgroundTint="#FFFFFF"
            app:icon="@drawable/camera"
            app:iconSize="32dp"
            app:iconTint="#DF8104"
            app:layout_constraintBottom_toBottomOf="@+id/adaPostTitleView"
            app:layout_constraintEnd_toStartOf="@+id/fragmentTitle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/adaPostTitleView"
            app:layout_constraintTop_toTopOf="@+id/adaPostTitleView" />

        <Button
            android:id="@+id/Sponsors"
            android:layout_width="57dp"
            android:layout_height="46dp"
            android:backgroundTint="#FFFFFF"
            app:icon="@drawable/upload"
            app:iconSize="32dp"
            app:iconTint="#DF8104"
            app:layout_constraintBottom_toBottomOf="@+id/adaPostTitleView"
            app:layout_constraintEnd_toStartOf="@+id/fragmentTitle"
            app:layout_constraintHorizontal_bias="0.186"
            app:layout_constraintStart_toEndOf="@+id/sendPostGo"
            app:layout_constraintTop_toTopOf="@+id/adaPostTitleView" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/postRecycler"
            android:layout_width="380dp"
            android:layout_height="499dp"
            android:background="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adaPostProfilesView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/topUserRecycler"
            android:layout_width="386dp"
            android:layout_height="64dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="@+id/adaPostProfilesView"
            app:layout_constraintEnd_toEndOf="@+id/adaPostProfilesView"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintStart_toStartOf="@+id/adaPostProfilesView"
            app:layout_constraintTop_toTopOf="@+id/adaPostProfilesView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>