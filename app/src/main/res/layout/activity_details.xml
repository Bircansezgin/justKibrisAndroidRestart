<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39C1BEBE"
    tools:context=".HomePage.ActivityDetail.Activity_Details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3A0065"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <!-- Diğer görünümler buraya eklenebilir -->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="1175dp">

                    <ImageView
                        android:id="@+id/imageViewHeader"
                        android:layout_width="293dp"
                        android:layout_height="218dp"
                        android:layout_marginStart="31dp"
                        android:layout_marginTop="29dp"
                        android:layout_marginEnd="31dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/logo1" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewContent"
                        android:layout_width="331dp"
                        android:layout_height="920dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="11dp"
                        app:cardBackgroundColor="@color/black"
                        app:cardCornerRadius="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageViewHeader">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FAFFFCFC"
                            tools:layout_editor_absoluteX="-2dp"
                            tools:layout_editor_absoluteY="147dp">

                            <EditText
                                android:id="@+id/activityNameTextF"
                                android:layout_width="303dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="14dp"
                                android:layout_marginTop="9dp"
                                android:layout_marginEnd="14dp"
                                android:clickable="false"
                                android:ems="10"
                                android:focusable="false"
                                android:inputType="text"
                                android:longClickable="false"
                                android:text="İşletme "
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textViewEventName" />

                            <TextView
                                android:id="@+id/textViewEventName"
                                android:layout_width="142dp"
                                android:layout_height="29dp"
                                android:layout_marginStart="14dp"
                                android:layout_marginTop="18dp"
                                android:layout_marginEnd="175dp"
                                android:text="Etkinlik Adı"
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textViewEventNameValue" />

                            <TextView
                                android:id="@+id/textViewEventNameValue"
                                android:layout_width="299dp"
                                android:layout_height="48dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="16dp"
                                android:text="JUST KIBRIS"
                                android:textAlignment="textEnd"
                                android:textColor="#000000"
                                android:textSize="34sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <!-- Diğer görünümler buraya eklenebilir -->

                            <EditText
                                android:id="@+id/activityDateTextF"
                                android:layout_width="303dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="14dp"
                                android:layout_marginTop="9dp"
                                android:layout_marginEnd="14dp"
                                android:clickable="false"
                                android:editable="false"
                                android:ems="10"
                                android:enabled="true"
                                android:focusable="false"

                                android:inputType="text"
                                android:longClickable="false"
                                android:text="İşletme "
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textViewEventDate" />

                            <TextView
                                android:id="@+id/textViewEventDate"
                                android:layout_width="142dp"
                                android:layout_height="29dp"
                                android:layout_marginStart="14dp"
                                android:layout_marginTop="18dp"
                                android:layout_marginEnd="175dp"
                                android:text="Etkinlik Tarihi"
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/activityNameTextF" />

                            <TextView
                                android:id="@+id/textViewEventFee"
                                android:layout_width="142dp"
                                android:layout_height="29dp"
                                android:layout_marginStart="14dp"
                                android:layout_marginTop="18dp"
                                android:layout_marginEnd="175dp"
                                android:text="Etkinlik Ücreti"
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/activityDateTextF" />

                            <TextView
                                android:id="@+id/textViewEventDescription"
                                android:layout_width="203dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="14dp"
                                android:layout_marginTop="18dp"
                                android:layout_marginEnd="114dp"
                                android:text="Etkinlik Açıklaması"
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/activityPriceTextF" />

                            <TextView
                                android:id="@+id/activityDescriptionTextF"
                                android:layout_width="303dp"
                                android:layout_height="186dp"
                                android:layout_marginStart="13dp"
                                android:layout_marginTop="9dp"
                                android:layout_marginEnd="14dp"
                                android:background="@drawable/background_border"
                                android:text="Açıklama"
                                android:textColor="#121212"
                                android:textStyle="bold|italic"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textViewEventDescription" />

                            <EditText
                                android:id="@+id/activityPriceTextF"
                                android:layout_width="303dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="14dp"
                                android:layout_marginTop="9dp"
                                android:layout_marginEnd="14dp"
                                android:clickable="false"

                                android:editable="false"
                                android:ems="10"
                                android:enabled="true"
                                android:focusable="false"
                                android:inputType="text"
                                android:longClickable="false"
                                android:text="İşletme "
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textViewEventFee" />

                            <EditText
                                android:id="@+id/phoneTextF"
                                android:layout_width="304dp"
                                android:layout_height="46dp"
                                android:layout_marginStart="14dp"
                                android:layout_marginTop="9dp"
                                android:layout_marginEnd="14dp"
                                android:clickable="false"
                                android:editable="false"
                                android:ems="10"
                                android:enabled="true"
                                android:focusable="false"
                                android:inputType="phone"
                                android:longClickable="false"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textViewContact" />

                            <TextView
                                android:id="@+id/textViewContact"
                                android:layout_width="303dp"
                                android:layout_height="28dp"
                                android:layout_marginStart="14dp"
                                android:layout_marginTop="18dp"
                                android:layout_marginEnd="14dp"
                                android:text="İletişim - Rezervasyon"
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/activityDescriptionTextF" />

                            <Button
                                android:id="@+id/callButton"
                                android:layout_width="178dp"
                                android:layout_height="52dp"
                                android:layout_marginStart="76dp"
                                android:layout_marginTop="36dp"
                                android:layout_marginEnd="76dp"
                                android:backgroundTint="#920BC529"
                                android:onClick="callButton"
                                android:text="Hemen Ara"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/phoneTextF" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
